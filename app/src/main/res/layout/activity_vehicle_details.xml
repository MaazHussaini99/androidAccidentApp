<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/background"
    tools:context=".VehicleDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans"
                android:text=" Enter other Vehicle Details"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:textAlignment="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1">

            <TextView
                android:id="@+id/vehicleMakeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans"
                android:text="  Vehicle Make"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/vehicleMake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleMakeTv"
                android:fontFamily="@font/open_sans"
                android:layout_marginLeft="10dp"
                android:hint="  Type Something"
                android:paddingTop="10dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:id="@+id/VehicleYearTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleMake"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans"
                android:text="  Vehicle Year"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/VehicleYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/VehicleYearTv"
                android:fontFamily="@font/open_sans"
                android:hint="  Type Something"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"/>


            <TextView
                android:id="@+id/plateNoTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/VehicleYear"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans"
                android:text="  Plate Number"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/plateNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plateNoTv"
                android:fontFamily="@font/open_sans"
                android:hint="  Type Something"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"/>


            <TextView
                android:id="@+id/stateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plateNo"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans"
                android:text="  State"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stateTv"
                android:fontFamily="@font/open_sans"
                android:hint="  Type Something"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"/>


            <TextView
                android:id="@+id/vehicleTypeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans"
                android:text="  Vehicle Type"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/vehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleTypeTv"
                android:fontFamily="@font/open_sans"
                android:hint="  Type Something"
                android:inputType="text"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:id="@+id/spinnerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleType"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans"
                android:text="  Select Your Vehicle"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/spinnerText"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative2">

            <Button
                android:id="@+id/toMaps"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/newButtonGray"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans"
                android:text=" NEXT" />


        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/main_nav_drawer"/>


    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>