<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleDetails"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="249dp"
                android:layout_height="92dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app_icon_04" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text=" Enter other Vehicle Details"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:textAlignment="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1">

            <TextView
                android:id="@+id/vehicleMakeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="  Vehicle Make"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/vehicleMake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleMakeTv"

                android:hint="  Type Something"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:id="@+id/VehicleYearTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleMake"
                android:layout_marginTop="50dp"
                android:text="  Vehicle Year"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/VehicleYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/VehicleYearTv"
                android:hint="  Type Something"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"/>


            <TextView
                android:id="@+id/plateNoTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/VehicleYear"
                android:layout_marginTop="50dp"
                android:text="  Plate Number"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/plateNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plateNoTv"
                android:hint="  Type Something"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"/>


            <TextView
                android:id="@+id/stateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plateNo"
                android:layout_marginTop="50dp"
                android:text="  State"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stateTv"
                android:hint="  Type Something"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"/>


            <TextView
                android:id="@+id/vehicleTypeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state"
                android:layout_marginTop="50dp"
                android:text="  Vehicle Type"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/vehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleTypeTv"
                android:hint="  Type Something"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:id="@+id/spinnerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleType"
                android:layout_marginTop="50dp"
                android:text="  Select Your Vehicle"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/spinnerText"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:background="@drawable/rounded_corners"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative2">

            <Button
                android:id="@+id/toMaps"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:text=" NEXT" />


        </RelativeLayout>

    </RelativeLayout>
</ScrollView>