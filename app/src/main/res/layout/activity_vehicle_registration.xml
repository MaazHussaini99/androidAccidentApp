<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vehicleRegistration"
    android:background="@color/backgroundColor2">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="265dp"
                android:layout_height="66dp"
                android:layout_marginStart="84dp"
                android:layout_marginTop="21dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_01" />

        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1">


            <EditText
                android:id="@+id/vehicleType"
                android:layout_width="293dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="308dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:hint="Vehicle Type"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/vehicleMake"
                android:layout_width="293dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="68dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:hint="Vehicle Make"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/state"
                android:layout_width="293dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="248dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:hint="State"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/plateNo"
                android:layout_width="293dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="188dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:hint="Plate Number"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/VehicleYear"
                android:layout_width="293dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="128dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:hint="Vehicle Year"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="176dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="177dp"
                android:layout_marginBottom="604dp"
                android:text="Enter in your vehicle information below"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/toMaps"
                android:layout_width="179dp"
                android:layout_height="55dp"
                android:layout_marginTop="376dp"
                android:layout_marginEnd="116dp"
                android:text=" NEXT"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.887"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>



    </RelativeLayout>
</ScrollView>