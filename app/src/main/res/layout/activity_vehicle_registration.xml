<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".vehicleRegistration">

    <include
        layout="@layout/logintoolbar"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1">


            <EditText
                android:id="@+id/vehicleType"
                android:layout_width="293dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="328dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:hint="Vehicle Type"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/vehicleMake"
                android:layout_width="293dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="88dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:hint="Vehicle Make"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/state"
                android:layout_width="293dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="268dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:hint="State"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/plateNo"
                android:layout_width="293dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="208dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:hint="Plate Number"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/VehicleYear"
                android:layout_width="293dp"
                android:layout_height="27dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="148dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:hint="Vehicle Year"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="176dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="177dp"
                android:layout_marginBottom="610dp"
                android:fontFamily="@font/open_sans_light"
                android:text="Enter in your vehicle information below"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/toMaps"
                android:layout_width="179dp"
                android:layout_height="55dp"
                android:layout_marginTop="420dp"
                android:layout_marginEnd="116dp"
                android:fontFamily="@font/open_sans"
                android:text=" NEXT"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/newButtonGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </RelativeLayout>
</ScrollView>
</LinearLayout>