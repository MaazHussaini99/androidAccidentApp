<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".insuranceRegistration">

    <include
        layout="@layout/logintoolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relative2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/provider"
                        android:layout_width="293dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginTop="100dp"
                        android:autofillHints="emailAddress"
                        android:background="@drawable/rounded_corners"
                        android:ems="10"
                        android:fontFamily="@font/open_sans"
                        android:hint="Insurance Provider"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/gray"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/policyHolder"
                        android:layout_width="293dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginTop="212dp"
                        android:autofillHints="emailAddress"
                        android:background="@drawable/rounded_corners"
                        android:ems="10"
                        android:fontFamily="@font/open_sans"
                        android:hint="Policy Holder"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/gray"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/policyNo"
                        android:layout_width="293dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginTop="156dp"
                        android:autofillHints="emailAddress"
                        android:background="@drawable/rounded_corners"
                        android:ems="10"
                        android:fontFamily="@font/open_sans"
                        android:hint="Policy Number"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/gray"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="176dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="177dp"
                        android:layout_marginBottom="604dp"
                        android:fontFamily="@font/open_sans_light"
                        android:text="Enter in your insurance information below"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <Button
                        android:id="@+id/saveInsuranceInfo"
                        android:layout_width="179dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="336dp"
                        android:layout_marginEnd="116dp"
                        android:fontFamily="@font/open_sans"
                        android:text=" NEXT"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative2">

                </RelativeLayout>



            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

