<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="@color/background">

    <TextView
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="587dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    <EditText
        android:id="@+id/firsName"
        android:layout_width="335dp"
        android:layout_height="34dp"
        android:background="@drawable/rounded_corners"
        android:text="  First Name"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="335dp"
        android:layout_height="34dp"
        android:background="@drawable/rounded_corners"
        android:text="  Last Name"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="193dp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="335dp"
        android:layout_height="34dp"
        android:background="@drawable/rounded_corners"
        android:text="  Email"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="282dp" />

    <EditText
        android:id="@+id/password_toggle"
        android:layout_width="335dp"
        android:layout_height="34dp"
        android:background="@drawable/rounded_corners"
        android:text="  Password"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="365dp" />

    <EditText
        android:id="@+id/licNo"
        android:layout_width="335dp"
        android:layout_height="34dp"
        android:background="@drawable/rounded_corners"
        android:text="  Licence No."
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="458dp" />

    <EditText
        android:id="@+id/policyNo"
        android:layout_width="335dp"
        android:layout_height="34dp"
        android:background="@drawable/rounded_corners"
        android:text="  Policy No."
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="542dp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="640dp"
        android:background="@drawable/rounded_button"
        android:text="Login"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/skipBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:backgroundTint="#e28743"
        android:text="Skip"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="640dp"

        >

    </Button>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/app_icon_04"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="249dp"
        android:layout_height="92dp"
        app:srcCompat="@drawable/logo_01"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>