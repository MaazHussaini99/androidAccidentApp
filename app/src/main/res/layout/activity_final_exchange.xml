<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/background"
    tools:context=".finalExchangeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans"
                android:text=" Final Check"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="@color/white"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1">

            <TextView
                android:id="@+id/firstNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="  First Name"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstNameTv"
                android:text="  1"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/lastNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstName"
                android:layout_marginTop="30dp"
                android:text="  Last Name"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastNameTv"
                android:text="  2"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/dobTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastName"
                android:layout_marginTop="30dp"
                android:text="  Date of Birth"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dobTv"
                android:text="  3"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/addTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/DOB"
                android:layout_marginTop="30dp"
                android:text="  Address"
                android:textColor="#FFD700"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addTv"
                android:text="  4"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/licenseTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Address"
                android:layout_marginTop="30dp"
                android:text="  License"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/licenseTv"
                android:text="  5"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/provTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/license"
                android:layout_marginTop="30dp"
                android:text="  Insurance Provider"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/insProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/provTv"
                android:text="  6"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/polTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/insProvider"
                android:layout_marginTop="30dp"
                android:text="  Insurance Policy Number"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/insPolicyNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/polTv"
                android:text="  7"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/holTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/insPolicyNum"
                android:layout_marginTop="30dp"
                android:text="  Insurance Policy Holder"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/insPolicyHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/holTv"
                android:text="  8"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/makeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/insPolicyHolder"
                android:layout_marginTop="30dp"
                android:text="  Vehicle Make"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/makeTv"
                android:text="  9"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/yearTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Make"
                android:layout_marginTop="30dp"
                android:text="  Vehicle Year"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yearTv"
                android:text="  10"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/plateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Year"
                android:layout_marginTop="30dp"
                android:text="  Vehicle Plate"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plateTv"
                android:text="  11"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/stateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Plate"
                android:layout_marginTop="30dp"
                android:text="  Vehicle State"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/vehicleState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stateTv"
                android:text="  12"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/typeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vehicleState"
                android:layout_marginTop="30dp"
                android:text="  Vehicle Type"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/typeTv"
                android:text="  13"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Type"
                android:layout_marginTop="30dp"
                android:text="  Accident Location"
                android:textColor="#FFD700"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/locationTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:text="  14"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/reportNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationTv"
                android:layout_marginTop="50dp"
                android:text="  Enter Report Name"
                android:textColor="@color/white"
                android:textSize="25sp" />


            <EditText
                android:id="@+id/ReportName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reportNameTv"
                android:hint="  Type Name"
                android:paddingTop="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative2">

            <Button
                android:id="@+id/submitInfoToFirebase"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:text=" NEXT"
                android:layout_centerHorizontal="true"/>




        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/main_nav_drawer"/>


    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>