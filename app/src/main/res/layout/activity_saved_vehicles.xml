<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedVehicles"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="249dp"
                android:layout_height="92dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app_icon_04" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:text=" Saved Vehicles"
                android:textSize="40sp"
                android:textColor="@color/white"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></RadioButton>

            <TextView
                android:id="@+id/VehicleYearTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radio1"
                android:layout_marginLeft="50dp"
                android:text="  2021 Mazda Cx-5"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/VehicleYearTv"
                android:layout_alignLeft="@+id/radio1"
                android:layout_marginLeft="50dp"
                android:src="@drawable/mazda_cx5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative2">

            <Button
                android:id="@+id/addVehicle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:text=" Add Vehicle" />


            <Button
                android:id="@+id/selectVehicle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/addVehicle"
                android:text=" Select Vehicle" />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>